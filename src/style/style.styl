body
  font-family var(--font-family-sans-serif),"Noto Sans TC"
  height 100%
  width 100%
#app
  height 100vh
  display flex
  flex-direction column-reverse
  padding 0

#nav
  height 20%
  display flex
  justify-content space-evenly
  align-items center
  background transparent linear-gradient(180deg, #FF6F61 0%, #FF4040 100%) 0% 0% no-repeat
  box-shadow 0px 0px 20px #44444480
  opacity: 1

#home
  height 100%
  background transparent linear-gradient(180deg, #FF6F61 0%, #FF4040 100%) 0% 0% no-repeat
  opacity 0.8
  display flex
  justify-content center
  align-items center
  font-family 'Roboto', sans-serif
  .progressbar__label
    margin-top 2rem
#list
  height 100%
  background transparent linear-gradient(180deg, #FF6F61 0%, #FF4040 100%) 0% 0% no-repeat
  opacity 0.8
  display flex
  flex-direction column
  justify-content center
  align-items center
  font-family 'Roboto', sans-serif
  .table
    width 80%
#settings
  height 100%
  background transparent linear-gradient(180deg, #FF6F61 0%, #FF4040 100%) 0% 0% no-repeat
  opacity 0.8
  display flex
  justify-content center
  align-items center
  font-family 'Roboto', sans-serif
  .table
    width 80%
    